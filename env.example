# Base de datos (conecta a PostgreSQL en Docker)
# Asegúrate de que docker-compose esté corriendo antes de iniciar el backend
DATABASE_URL=postgresql://foodoffice:foodoffice123@localhost:5432/foodoffice

# JWT Secret para cookies de sesión (genera uno seguro)
JWT_SECRET=tu-secret-jwt-aqui-cambiar-por-uno-seguro

# OAuth (opcional)
OAUTH_SERVER_URL=https://tu-servidor-oauth.com
VITE_APP_ID=tu-app-id
OAUTH_CLIENT_SECRET=tu-client-secret
OWNER_OPEN_ID=tu-open-id

# CORS (opcional, separado por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Puerto del servidor (opcional, por defecto 3000)
PORT=3000

# Configuración de PostgreSQL en Docker (opcional, valores por defecto en docker-compose.yml)
POSTGRES_USER=foodoffice
POSTGRES_PASSWORD=foodoffice123
POSTGRES_DB=foodoffice
POSTGRES_PORT=5432
