{
  "name": "foodoffice-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/_core/index.ts",
    "build": "npm run build:lambda && npm run build:server",
    "build:lambda": "esbuild src/lambda.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --out-extension:.js=.mjs",
    "build:server": "esbuild src/_core/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:sam": "sam build",
    "start": "NODE_ENV=production node dist/index.js",
    "build:start": "npm run build && npm start",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:check": "tsx scripts/check-tables.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.693.0",
    "@aws-sdk/s3-request-presigner": "^3.693.0",
    "@trpc/server": "^11.6.0",
    "@vendia/serverless-express": "^4.12.6",
    "@vercel/node": "^3.0.7",
    "axios": "^1.12.0",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.2",
    "jose": "6.1.0",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.5",
    "superjson": "^1.13.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "4.17.21",
    "@types/node": "^24.7.0",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.1",
    "typescript": "5.9.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": "20.x"
  }
}
